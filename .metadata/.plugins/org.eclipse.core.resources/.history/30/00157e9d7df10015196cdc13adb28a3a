package com.xinhua.zql3_24;

import java.util.Scanner;

import javax.swing.text.StyledEditorKit.ForegroundAction;

public class Demo4 {

	public static void main(String[] args) {
		// TODO 自动生成的方法存根//随机产生数组，利用插入排序
	//排好顺序再利用二分查找查找其中一个数是否存在于数组中！
		int[] a = new int[11];
		for(int i = 1;i<a.length;++i){
			a[i] = (int)(Math.random()*100);
			System.out.print("  "+a[i]);
			a[0] = 0;
		}
		insertSort(a);
		System.out.println();
		for (int i = 0; i < a.length; i++) {
			System.out.print("  "+a[i]);
		}
		System.out.println("输入想要查找的数值：");
		Scanner input = new Scanner(System.in);
		int f = input.nextInt();
		Demo4 d = new Demo4();
		d.findValue(a, 0, 10, f);
		
	}
	
	public static void insertSort(int[] a){
		for (int i = 2; i < a.length; i++) {
			 if(a[i]<a[i-1]){
				 a[0] = a[i];
				 a[i] = a[i-1];
				 
				 int pos = 0;
				 for (int j = i-2; j > 0; --j) {
					if(a[j]>a[0]){
						a[j+1]=a[j];
					}else{
						pos = j+1;
						break;
					}
				}
				 a[pos] = a[0];
				 a[0] = 0;
			 }
			
		}
	}
	public int findValue(int[] a ,int low,int high,int value){
			int mid = low + (high-low)/2;
			if(low<high){
			if(a[mid] == value)
				return mid;
			else if(a[mid]>value)
				findValue(a,low,mid-1,value);
			else if(a[mid]<value)
				findValue(a,mid+1,high,value);
			}
				return -1;
			
		} 

}
